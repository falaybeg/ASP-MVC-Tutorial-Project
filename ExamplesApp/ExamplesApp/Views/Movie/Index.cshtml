@model IEnumerable<ExamplesApp.Models.Movie>
@{
    ViewBag.Title = "Index";
}

<h2>Movies</h2>

@Html.ActionLink("New Movie", "New", "Movie", new { @class="btn btn-primary"})

<table class="table table-hover">
    <thead>
        <tr>
            <th>Movies</th>
            <th>Genre</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Details", "Movie", new { id = item.Id }, null)</td>
                    <td>@item.Genre.Name</td>
                    <td>@Html.ActionLink("Edit", "EditMovie", "Movie", new { id = item.Id }, new { @class="btn btn-warning"})</td>
                </tr>
            }
    </tbody>
</table>