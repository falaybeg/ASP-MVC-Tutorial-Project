@model IEnumerable<ExamplesApp.Models.Customer>
@{
    ViewBag.Title = "Index";
}

<h2>Customers</h2>

@if (!Model.Any())
{
    <td>We don't have any customer yet</td>
}
else
{
<table class="table table-hover">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Membership Type</th>
        </tr>
    </thead>
    <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.ActionLink(item.Name, "Details", "Customer", new { id = item.Id }, null)</td>
                     <td>@item.MemberShipType.Name</td>
                </tr>
            }
    </tbody>
</table>
}